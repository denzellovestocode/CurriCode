<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/numbersteachpage"
    tools:context=".numbersteachpage">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="How Do you Want to Learn"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="120dp"
        android:id="@+id/numberslesson"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/nos"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/circular"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="120dp"
        android:id="@+id/numbersvideo"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/integration"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/circular"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do Questions ?"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="150dp"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Watch a Video on the Topic ?"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="300dp"
        android:textSize="30dp" />

</RelativeLayout>