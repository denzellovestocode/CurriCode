<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gabu2"
    android:visibility="visible"
    tools:visibility="visible">

    <!-- Add your splash screen elements here -->
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/curri"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"



        />

    <ImageView
        android:id="@+id/curri"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/appbackgroundone" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="800dp"
        android:fontFamily="@font/allan"
        android:gravity="bottom"
        android:text="By Denzel and Killy"
        android:textColor="@color/light_cyan"
        android:textSize="20sp"
        android:textStyle="italic" />

</RelativeLayout>
