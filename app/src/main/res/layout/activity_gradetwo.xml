<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hot_pink"
    tools:context=".gradetwo">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/quizIcong2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="80dp"
                android:adjustViewBounds="true"
                android:src="@drawable/appbackgroundone" />

            <TextView
                android:id="@+id/quiztext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/quizIcong2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:text="Choose Subject"
                android:textColor="@color/beige"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/mathematicslayoutg2"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mathematicsg2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/mathg3" />

                    <TextView
                        android:id="@+id/mathematicstxtg2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mathematics"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hygenelayoutg2"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/hygineg2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|center_vertical"
                        app:srcCompat="@drawable/hygieneg3" />

                    <TextView
                        android:id="@+id/hygenetxtg2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hygiene and Nutrition"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/environmentallayoutg2"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/enviromnentalg2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        app:srcCompat="@drawable/environmentalg3" />

                    <TextView
                        android:id="@+id/environmentaltxtg2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Environmental"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/englishlayoutg2"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/englishg2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|center_vertical"
                        app:srcCompat="@drawable/englishg3" />

                    <TextView
                        android:id="@+id/englishtxtg2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/butttong2"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="Learn"
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>

